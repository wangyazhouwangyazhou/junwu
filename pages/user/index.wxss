/* pages/user/index.wxss */
.page-user{
  overflow-x: hidden;
}
.header{
  padding: 60rpx 0 20rpx;
  background-color: #fff;
  border-bottom: 1px solid var(--border-color);
}

.header .avatar{
  display: block;
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto 20rpx;
  border-radius: 50%;
}

.header .name{
  color: #000;
  font-size: 36rpx;
  line-height: 50rpx;
  text-align: center;
  margin-bottom: 10rpx;
}

.header .uid{
  color: #999;
  font-size: 24rpx;
  line-height: 32rpx;
  text-align: center;
  margin-bottom: 40rpx;
}

.item-container {
  position: relative;
  padding: 0 30rpx;
  background: #fff;
}

.item-container:after {
  content: "";
  position: absolute;
  left: 0;
  right: -40rpx;
  bottom: 0;
  border-bottom: 1px solid var(--border-color);
}

.item {
  display: flex;
  align-items: center;
  height: 120rpx;
  font-size: 30rpx;
  line-height: 100rpx;
}

.icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}
.icon.scan{
  position: absolute;
  top: 50%;
  left: -60rpx;
  transform: translateY(-50%);
  padding-right: 60rpx;
  filter:drop-shadow(60rpx 0 0 #999);
}
.scan + text{
  margin-left: 80rpx;
}