page {
  background: #fff;
}

.pk {
  padding: 18rpx 26rpx 0 26rpx;
  position: relative;
}

.pk-img {
  width: 347rpx;
  height: 361rpx;
}

.vs {
  width: 247rpx;
  height: 117rpx;
  position: absolute;
  left: 269rpx;
  top: 92rpx;
}

.pkTitle {
  font-size:33rpx;
  color:#ffffff;
  text-align:center;
  width: 698rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}

.pkback {
  width: 697rpx;
	height: 109rpx;
	background-color: rgba(0, 0, 0, 0.5);
  position: absolute;
  left: 26rpx;
  bottom: 0;
}

.progress {
  padding: 0 26rpx;
  display: flex;
  justify-content: space-between;
  position: relative;
  margin-top: 6rpx;
}

.progress2 {
  padding: 0 26rpx;
  display: flex;
  justify-content: space-around;
  position: relative;
  margin: 20rpx 0;
}

.progress-img {
  width:176rpx;
  height:150rpx;
  position: absolute;
  left: 290rpx;
  top: -55rpx;
}

.color {
  width: 138rpx;
  height: 38rpx;
}

.comments {
  width: 340rpx;
  font-size: 24rpx;
	color: #000000;
  margin-bottom: 15rpx;
  overflow:hidden; 
  text-overflow:ellipsis; 
  word-break: break-all;
  -webkit-line-clamp: 2;  
  -webkit-box-orient: vertical;  
  display: -webkit-box;
}

.comments-name {
  color: #55c5ff;
}

.comments-names {
  color: #ff5555;
}

.comments-box {
  display: flex;
  justify-content: center;
  width: 700rpx;
  margin: 0 auto;
}

.comments-detail {
  width: 262rpx;
	height: 40rpx;
	border-radius: 10rpx;
	border: solid 2rpx #000000;
  font-size: 24rpx;
	color: #000000;
  line-height: 40rpx;
  text-align: center;
  margin: 12rpx auto 35rpx auto;
}

.left {
  font-size: 26rpx;
	color: #000000;
  position: absolute;
  left: 220rpx;
  bottom: 0rpx;
}

.right {
  font-size: 26rpx;
	color: #000000;
  position: absolute;
  right: 220rpx;
  bottom: 0rpx ;
}