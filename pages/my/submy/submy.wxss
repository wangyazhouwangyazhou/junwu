/* pages/my/my.wxss */
.head{
  background: #fff;
  text-align: center;
  padding: 30px 0px;
}
.head image{
  width: 100px;
  height: 100px;
  border-radius: 50px;
  margin: 0 auto;
}
.item{
  background: #fff;
  height: 45px;
  padding: 8px 20px;
  margin-top: 2px;
}
.item-img{
  width: 30px;
  height: 30px;
  margin-top: 6px;
  float: left;
}
.item-txt{
  font-size: 14px;
  float: left;
  line-height: 36px;
  margin-top: 5px;
  margin-left: 10px;
}
.item-right{
  float: right;
  margin-right: 10px;
  color: #999;
  margin-top: 12px;
}

.my {
	font-size: 28rpx;
	background-color: #fff;
	margin: 30rpx 0;
	padding: 20rpx 40rpx;
}

.toolicon {
	width: 40rpx;
	height: 40rpx;
	display: inline-block;
	vertical-align: middle;
}

.postTxt {
  font-size: 28rpx;
	margin-left: 10rpx;
	display: inline-block;
	vertical-align: middle;
}

.inputRow {
  background-color: #fff;
  padding: 30rpx 0;
  padding-left: 20rpx;
  padding-right: 5rpx;
  border-top: 2rpx solid #f3f3f3;
}

