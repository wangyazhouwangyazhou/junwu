/* pages/my/my.wxss */
.head{
  background: #fff;
  text-align: center;
  padding: 30px 0px;
  position: relative;
}
.portrait {
  width: 100px;
  height: 100px;
  border-radius: 50px;
  margin: 0 auto;
}
.draft {
  width: 60rpx;
  height: 90rpx;
  position: absolute;
  right: 23rpx;
  top: 23rpx;
}
.item{
  background: #fff;
  height: 45px;
  padding: 8px 20px;
  margin-top: 2px;
}
.item-img{
  width: 30px;
  height: 30px;
  margin-top: 6px;
  float: left;
}
.item-txt{
  font-size: 14px;
  float: left;
  line-height: 36px;
  margin-top: 5px;
  margin-left: 10px;
}
.item-right{
  float: right;
  margin-right: 10px;
  color: #999;
  margin-top: 12px;
}

.spec-menu-content {
    width: 75%;
    height: 66%;
    overflow: auto;  
    margin: auto;  
    position: absolute;  
    top: 80rpx; left: 0; right: 0;  
    background-color: #7f8c8d;
    z-index: 2500;
    border-radius: 15rpx;
}

