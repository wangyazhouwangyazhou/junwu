.Lottery_1{
  color: #f00;
}

.Lottery_1 .header{
  position: relative;
  width: 100%;
  height: 1059rpx;
  background-repeat: no-repeat;
  background-size: cover;
}
.Lottery_1 .header .bg{
  display: block;
  width: 100%;
  height: 100%;
}
.Lottery_1 .container{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}
.Lottery_1 .cover{
  display: block;
  margin: 15rpx auto 0;
  width: 721rpx;
  height: 498rpx;
}
.Lottery_1 .lottery-list{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 40rpx 80rpx 0;
}

.Lottery_1 .item{
  position: relative;
  width: 163rpx;
  height: 236rpx;
}

.Lottery_1 .item image{
  position: absolute;
}
.Lottery_1 .item .icon-1{
  left: 14rpx;
  top: 57rpx;
  width: 125rpx;
  height: 160rpx;
  z-index: 9;
}
.Lottery_1 .item .icon-2{
  left: 0;
  top: 206rpx;
  width: 147rpx;
  height: 30rpx;
}
.Lottery_1 .item .icon-3{
  left: 80rpx;
  top: 0;
  width: 73rpx;
  height: 61rpx;
  z-index: 10;
}
.Lottery_1 .item .icon-4{
  left: -22rpx;
  top: 72rpx;
  width: 186rpx;
  height: 145rpx;
  opacity: 0;
}
.Lottery_1 .active .icon-1{
  animation: zandan-1 0.4s linear infinite;
}
.Lottery_1 .active .icon-4{
  animation: zandan-2 0.4s linear infinite;
}
.Lottery_1 .active .icon-3{
  transform-origin: right bottom;
  animation: zandan-3 0.4s linear infinite;
}
@keyframes zandan-1{
  0%{opacity: 1;}
  49.9%{opacity: 1;}
  50%{opacity: 0;}
  99.9%{opacity: 0;}
  100%{opacity: 1;}
}
@keyframes zandan-2{
  0%{opacity: 0;}
  49.9%{opacity: 0;}
  50%{opacity: 1;}
  99.9%{opacity: 1;}
  100%{opacity: 0;}
}
@keyframes zandan-3{
  0%{transform: rotate(0);}
  50%{transform: rotate(-25deg);}
}

.Lottery_1 .prize{
  box-sizing: border-box;
  position: relative;
  width: 100%;
  padding-left: 60rpx;
  background-color: #0095a2;
}
.Lottery_1 .prize-icon{
  position: absolute;
  left: 0;
  top: 0;
  z-index: 9;
  width: 80rpx;
  height: 80rpx;
}
.Lottery_1 .scroll-wrapper{
  box-sizing: border-box;
  display: flex;
}
.Lottery_1 .prize-item{
  flex: none;
  width: 133rpx;
  padding: 33rpx 26rpx 33rpx 0;
}
.Lottery_1 .prize-image{
  box-sizing: border-box;
  width: 133rpx;
  height: 133rpx;
  padding: 20rpx;
  border: 1px solid #ddd;
  background-color: #fff;
}
.Lottery_1 .prize-title{
  padding-top: 6rpx;
  color: #fff;
  font-size: 28rpx;
  line-height: 36rpx;
  text-align: center;
}

.Lottery_1 .rule{
  position: relative;
  padding: 20rpx 60rpx 100rpx;
  background-color: #00737d;
}
.Lottery_1 .rule-image{
  display: block;
  width: 640rpx;
  height: 50rpx;
  margin: 0 auto;
}
.Lottery_1 .rule-title{
  padding-top: 20rpx;
  color: #fff;
  font-size: 32rpx;
  line-height: 48rpx;
}
.Lottery_1 .rule-content{
  padding-top: 20rpx;
  color: #fff;
  font-size: 28rpx;
  line-height: 36rpx;
}

.Lottery_1 .model-container{
  position: fixed;
  left: 0;
  top: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0,0,0,0.6);
  z-index: 99;
}
.Lottery_1 .model{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.Lottery_1 .model.success .icon{
  width: calc(214rpx * 1.5);
  height: calc(348rpx * 1.5);
}
.Lottery_1 .model.success .msg{
  position: absolute;
  left: 40rpx;
  right: 40rpx;
  top: 80rpx;
  color: #fff;
  font-size: 24rpx;
}
.Lottery_1 .model.fail .icon{
  width: calc(269rpx * 1.5);
  height: calc(269rpx * 1.5);
}
.Lottery_1 .model .btn{
  width: 180rpx;
  height: 72rpx;
  margin: 20rpx auto;
  color: #fff;
  line-height: 72rpx;
  text-align: center;
  background-color: #F67F75;
  border-radius: 12rpx;
}












