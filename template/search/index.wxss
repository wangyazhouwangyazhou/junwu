@import "/template/list/index.wxss";
@import "/template/video/video-item/index.wxss";


.search-wrapper {
  box-sizing: border-box;
  position: relative;
  width: 100%;
  height: var(--search-height);
  padding: 0 30rpx;
  /* background-color: #f5f5f5; */
  /* background:rgba(0, 0, 0, 0); */
  z-index: 100;
}
.search-icon {
  width: 40rpx;
  height: 40rpx;
  padding-right: 20rpx;
   /* filter: drop-shadow(0rpx 0 0 #666);   */
}
.search-input {
  box-sizing: border-box;
  height: 60rpx;
  padding: 0 30rpx 0 60rpx;
  color: #666;
  font-size: 28rpx;
  text-align: center;
  border-radius: 10rpx;
  border: 1px solid #ccc;
  /* background-color: #fff; */
  background:rgba(255, 255, 255, 0.3);
}

.search-page{
  position: relative;
  z-index: 100;
  background-color: #fff;
}
.search-scroll{
  height: 100%;
  /* overflow-y: scroll; */
  /* height: calc(100vh - var(--search-height)); */
}
.search-page .search-wrapper{
 /*  position: fixed;
  left: 0;
  top: 0; */
  border-bottom: 1rpx solid var(--border-color, #fefefe);
  background-color:  #fff;
}
.search-page .search-input{
  padding-left: 30rpx;
  text-align: left;
}

.search-cancel{
  padding-left: 20rpx;
  font-size: 28rpx;
  text-align: center;
}