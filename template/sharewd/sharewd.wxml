
<!--分享-->
<template name="Share_2">
<view class='share-bg' wx:if="{{share_view}}">
  <view class='share-con'>
    <image src='{{cover}}' style='border-radius:10px;width: 100%;height:400rpx;' mode="widthFix"></image>
    <view style='text-align；center;margin:20px;'>{{shareTitle}}</view>
    <view class='share-img-con' >
      <view class='sharewxfriendbt' style="text-align: center;">
        <button style='background:#fff;' open-type="share">
            <image src='/images/share-wx.png' style='width:55px;height:55px;margin: 0rpx auto;'></image>
        </button>
        <view style='font-size:12px;margin-top:12rpx;'>邀请好友回答</view>
      </view>
    </view>
    <view class='share-close' bindtap='closeSharePanel'>X</view>
  </view>
</view>

<canvas canvas-id="myCanvas" style="width:{{width}}px;height:{{height}}px;position:absolute;top:0px;left:-2000px;"/>
</template>
