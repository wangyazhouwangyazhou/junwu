@import "/template/video/video-item/index.wxss";

/* Video_2 */
.video_2__wrapper{
  padding: 0 var(--space);
  overflow-x: scroll;
}
.video_2__item{
  width: 335rpx;
  padding-right: var(--space);
}
.video_2__header{
  position: relative;
}
.video_2__cover{
  width: 100%;
  height: 190rpx;
  border-radius: 8rpx;
  overflow: hidden;
}
.video_2__duration{
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  color: #fff;
  font-size: 22rpx;
}
.video_2__icon{
  position: absolute;
  left: 20rpx;
  bottom: 20rpx;
  width: 50rpx;
  height: 50rpx;
}
.video_2__title{
  margin: 20rpx 0;
  color: #111;
  font-size: 28rpx;
  overflow: hidden;
  display: -webkit-box;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.v-title{
  font-size: 32rpx;
  padding: var(--space, 30rpx);
}

.a-list .video_2__item{
  width: 220rpx;
}
.a-list .video_2__cover{
  height: 160rpx;
}