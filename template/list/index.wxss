@import "/template/list/list-item/index.wxss";

.banner-item-template{
  --space: 30rpx;
  margin-bottom: 20rpx;
}
.banner-item-template .banner{
  width: 100%;
  height: 415rpx;
}

.banner-item-template .content{
  position: relative;
  display: flex;
  justify-content: space-between;
  padding: var(--space);
  background-color: #fff;
}

.banner-item-template .info{
  line-height: 40rpx;
}

.banner-item-template .title{
  color: #000;
  font-size: 28rpx;
}
.banner-item-template .joinnum{
  color: #666;
  font-size: 26rpx;
}

.banner-item-template .arrow-right:before, .banner-item-template .arrow-right:after {
  content: "";
  position: absolute;
  top: 50%;
  right: var(--space);
  display: block;
  width: 10px;
  height: 2px;
  background: #ccc;
  border-radius: 2px;
  transform-origin: right;
}

.banner-item-template .arrow-right:before {
  transform: rotate(45deg);
}

.banner-item-template .arrow-right:after {
  transform: rotate(-45deg);
}


.lottery-item-template{
  position: relative;
  display: flex;
  margin-bottom: 20rpx;
  padding: 20rpx 30rpx;
  background: #fff;
}

.lottery-item-template .left{
  width: 160rpx;
  height: 160rpx;
  margin-right: 36rpx;
}

.lottery-item-template .left image{
  width: 100%;
  height: 100%;
}

.lottery-item-template .right{
  width: 100%;

  font-size: 28rpx;
}

.lottery-item-template .right .title{
  flex: 100%;
  max-height: 80rpx;
  line-height: 40rpx;
  overflow: hidden;
}

.lottery-item-template .right .time{
  flex: none;
  color: #999;
  font-size: 26rpx;
  overflow: hidden;
}
.lottery-item-template .btn-prize{
  position: absolute;
  top: 50%;
  right: 30rpx;
  height: 60rpx;
  padding: 0 20rpx;
  transform: translateY(-50%);
  color: #fff;
  font-size: 28rpx;
  line-height: 60rpx;
  background-color: #e63531;
}
.lottery-item-template .gray-bg{
  background-color: #ccc;
}


